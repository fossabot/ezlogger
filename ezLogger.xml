  <property name="project.jdk.classpath" value="jdk.classpath.jdk_10"/>
  
  
  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_ezlogger.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.ezlogger" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.ezlogger" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.ezlogger" value="${basedir}/out/artifacts/ezLogger"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.ezLogger.jar" value="${artifacts.temp.dir}/ezLogger.jar"/>
  </target>
  
  <target name="artifact.ezlogger" depends="init.artifacts, compile.module.ezlogger" description="Build &#39;ezLogger&#39; artifact">
    <property name="artifact.temp.output.ezlogger" value="${artifacts.temp.dir}/ezLogger"/>
    <mkdir dir="${artifact.temp.output.ezlogger}"/>
    <jar destfile="${temp.jar.path.ezLogger.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${ezlogger.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.ezLogger.jar}" tofile="${artifact.temp.output.ezlogger}/ezLogger.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.ezlogger" description="Build all artifacts">
    <mkdir dir="${artifact.output.ezlogger}"/>
    <copy todir="${artifact.output.ezlogger}">
      <fileset dir="${artifact.temp.output.ezlogger}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
